root: true

parser: babel-eslint

extends: [standard, prettier]
plugins: [babel, prettier]

env:
  es6: true
  node: true

rules:
  semi: [2, 'never']
  no-console: 0
  no-return-await: 2
  prettier/prettier: ['error', {
    singleQuote: true,
    trailingComma: 'none',
    semi: false,
    bracketSpacing: true,
    jsxBracketSameLine: true,
    printWidth: 80,
    tabWidth: 2,
    useTabs: false
  }]
